<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Rozwprawe">
    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/okno"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/okno_r" />

    <ImageView
        android:id="@+id/imageklamka"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imagedol"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imageplecy"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <GridLayout
        android:id="@+id/grid_ru_prawy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/okno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:rowCount="8"
        android:columnCount="3">

        <RadioGroup android:id="@+id/group_klamka">

            <RadioButton
                android:id="@+id/kl1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="433"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/kl2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:text="533"
                android:textColor="#FFEB3B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/kl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                android:text="583"
                android:textColor="#DDDADA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/kl4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="1020"
                android:textColor="#FA0202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/kl5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:text="1020"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RadioGroup>

        <RadioGroup android:id="@+id/group_dol">

            <RadioButton
                android:id="@+id/d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="0 - 730"
                android:textColor="#8A8A86"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="731 - 1200"
                android:textColor="#1C43CF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="1201 - 1400"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="1401 - 1600"
                android:textColor="#FFEB3B"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RadioGroup>

    </GridLayout>

</RelativeLayout>