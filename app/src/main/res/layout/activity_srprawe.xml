<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".srprawe"
    android:background="@drawable/back">
    <include layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/okno"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/okno_ruch" />

    <ImageView
        android:id="@+id/imagedol"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <ImageView
        android:id="@+id/imageplecy"
        android:layout_width="266dp"
        android:layout_height="306dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <GridLayout
        android:id="@+id/grid_ru_prawy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/okno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:rowCount="8"
        android:columnCount="3">

        <RadioGroup android:id="@+id/group_dol">

            <RadioButton
                android:id="@+id/d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="0 - 730"
                android:textColor="#8A8A86"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="731 - 800"
                android:textColor="#1C43CF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="801 - 1200"
                android:textColor="#1C43CF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="1201 - 1400"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/d5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:text="1401 - 1600"
                android:textColor="#FFEB3B"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RadioGroup>

        <RadioGroup android:id="@+id/group_plecy">

            <RadioButton
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:text="0 - 800"
                android:textColor="#8A8A86"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:text="801 - 1200"
                android:textColor="#1C43CF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:text="1201 - 1550"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:text="1551 - 1800"
                android:textColor="#FFEB3B"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/p5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:text="1801 - 2100"
                android:textColor="#DDDADA"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/p6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="2"
                android:text="2101 - 2400"
                android:textColor="#FA0202"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/p7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="2"
                android:text="2401 +"
                android:textColor="#050505"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RadioGroup>


    </GridLayout>

</RelativeLayout>